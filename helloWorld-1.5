SubProceso problema(trofeos Por Referencia)
	Definir num1, num2, operacion, vidaEnemigo, vidaUsuario  Como entero;
	Definir respuesta, resultado como real;
	Definir pausa Como caracter;
	vidaEnemigo = 3;
	vidaUsuario = 3;
	//tutorialBatalla();
	//retornoEmparejando();
	Hacer
		resultado = 0
		num1 = Aleatorio(0,9);
		num2 = Aleatorio(0,9);
		operacion = Aleatorio(1,4);
		//LA OPERACION CAMBIARA SEGUN SEA EL NUMERO QUE LE SEA OTORGADA.
		//1. - Suma.
		//2. - Resta.
		//3. - Multiplicacion.
		//4. - Division.
		Limpiar Pantalla;
		Escribir "";
		Escribir "(You)    (Enemy)";
		Escribir " []        []";
		Escribir " ",vidaUsuario,"         ",vidaEnemigo;
		Escribir "";
		Escribir "";
		tocapara();
		
		Limpiar Pantalla;
		
		Escribir "RESUELVA:";
		segun operacion Hacer
			caso 1: 
				Escribir num1," + ",num2," = ";
				resultado = num1 + num2;
			caso 2: 
				Escribir num1," - ",num2," = ";
				resultado = num1 - num2;
			caso 3: 
				Escribir num1," X ",num2," = ";
				resultado = num1 * num2;
			caso 4: 
				Hacer
					num1 = Aleatorio(1,99);
					num2 = Aleatorio(1,99);
				Hasta Que num1 > num2;		//Cambiara ambos numeros hasta que el primero sea mayor que el segundo y que sean mayores a 0.
				
				Escribir num1," / ",num2," = ";
				resultado = num1 / num2;
		FinSegun
		leer respuesta;
		si respuesta = resultado Entonces
			vidaEnemigo = vidaEnemigo - 1;
		SiNo
			vidaUsuario = vidaUsuario - 1;
		FinSi
	Hasta Que vidaEnemigo = 0 o vidaUsuario = 0 
	Limpiar Pantalla;
	si vidaEnemigo = 0 Entonces
		Escribir "Has ganado! +30 Trofeos";
		trofeos = trofeos + 30;
	SiNo
		Escribir "Has perdido! -30 Trofeos";
		trofeos = trofeos - 30;
		si trofeos < 0 Entonces
			trofeos = 0;
		FinSi
	FinSi
	Escribir "Tienes: ", trofeos, " Trofeos";
	tocapara();
FinSubProceso


