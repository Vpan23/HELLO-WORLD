SubProceso problema(trofeos,vidaEnemigo Por Referencia, vidaUsuario Por Referencia)
	Definir num1, num2, i, respuesta Como entero;
	Dimension num1[3], num2[3];
	para i = 1 Hasta 3 Hacer
		num1[i] = Aleatorio(0,9);
		num2[i] = Aleatorio(0,9);
	FinPara
	para i = 1 Hasta 3 Hacer
		Escribir Sin Saltar num1[i]," + ",num2[i], " = ";
		leer respuesta;
		total = num1[i] + num2[i];
		si respuesta == total Entonces
			vidaEnemigo = vidaEnemigo - 1;
		sino
			vidaUsuario = vidaUsuario - 1;
		FinSi
	FinPara
	
	
	Definir pausa Como caracter;
	Limpiar Pantalla;
	Escribir trofeos;
	si trofeos <> 0 Entonces
		si vidaEnemigo = 0 Entonces
			Escribir "Has ganado +30 Copas";
			trofeos = trofeos + 30;
		SiNo
			si vidaUsuario = 0 Entonces
				Escribir "Has perdido -30 Copas";
				trofeos = trofeos - 30;
			FinSi
		FinSi
	FinSi
	si trofeos = 0 Entonces
		si vidaEnemigo = 0 Entonces
			trofeos = trofeos + 30;
		FinSi
	FinSi
	Escribir trofeos;
	leer pausa;
	
FinSubProceso

